<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>Your Anime List</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <div class="anime-list-container">
    <h1>Your Anime List</h1>
    <a href="/users/<%= user._id %>/animes/new" class="add-anime-btn">Add a New Anime</a>
    <div class="anime-cards">
      <% animes.forEach((anime) => { %>
        <div class="anime-card">
          <h2><%= anime.title %></h2>
          <p>Status: <%= anime.status %></p>
          <% if (anime.notes && anime.notes.trim().length > 0) { %>
            <p>Notes: "<%= anime.notes %>"</p>
          <% } %>
          <p>
            <%= anime.recommended ? 'Recommended' : 'Not Recommended' %>
          </p>
          <div class="anime-card-actions">
            <a href="/users/<%= user._id %>/animes/<%= anime._id %>/edit" class="edit-btn">Edit</a>
            <form action="/users/<%= user._id %>/animes/<%= anime._id %>?_method=DELETE" method="POST">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
